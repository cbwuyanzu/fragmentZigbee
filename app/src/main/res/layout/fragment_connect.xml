<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connectTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cb.fragmentZigbee.ConnectFragment" >

    <!-- TODO: Update blank fragment layout -->


    <!-- <TextView -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:text="@string/hello_blank_fragment" /> -->

    <Switch
        android:id="@+id/bluetoothonoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textOff="蓝牙关闭"
        android:textOn="蓝牙开启" />

    <Button
        android:id="@+id/scanbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bluetoothonoff"
        android:layout_centerHorizontal="true"
        android:text="@string/scanbutton" />

    <ListView
        android:id="@+id/scanListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/scanbutton" >
    </ListView>

</RelativeLayout>